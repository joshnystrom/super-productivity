{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      false,
      "camelCase"
    ],
    "component-selector": [
      false,
      "element",
      false,
      "kebab-case"
    ],
    "typedef": [
      true,
      "array-destructuring",
      "member-variable-declaration",
      "parameter",
      "property-declaration"
    ],
    "no-inferrable-types": false,
    "strict-type-predicates": true,
    "template-use-track-by-function": true,
    "align": false,
    "max-line-length": [
      true,
      180
    ]
  }
}
